# Trading Bot Environment Configuration

# Core Bot Configuration (REQUIRED)
TELEGRAM_TOKEN=your_telegram_bot_token_here
BYBIT_API_KEY=your_bybit_api_key_here
BYBIT_API_SECRET=your_bybit_api_secret_here
USE_TESTNET=false

# OpenAI Integration (OPTIONAL - for AI features)
OPENAI_API_KEY=your_openai_api_key_here
LLM_PROVIDER=openai
ENABLE_GPT4_REASONING=true  # Enable GPT-4 reasoning for enhanced market analysis (default: true)

# Social Media Sentiment Analysis (OPTIONAL)
ENABLE_SOCIAL_SENTIMENT=true

# Reddit API (OPTIONAL - for Reddit sentiment)
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here

# Twitter API v2 (OPTIONAL - for Twitter sentiment)
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
TWITTER_API_KEY=your_twitter_api_key_here

# YouTube Data API v3 (OPTIONAL - for YouTube sentiment)
YOUTUBE_API_KEY=your_youtube_api_key_here

# Discord Bot (OPTIONAL - for Discord sentiment)
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Advanced Configuration (OPTIONAL)
LOG_LEVEL=INFO
PERSISTENCE_FILE=bybit_bot_dashboard_v4.1_enhanced.pkl

# Position Management (OPTIONAL)
MANAGE_EXTERNAL_POSITIONS=false  # Set to true to manage ALL positions (not just bot-created)
AUTO_FIX_MISSING_ORDERS=false    # Set to true to automatically create missing TP/SL orders

# Mirror Trading (OPTIONAL)
BYBIT_API_KEY_2=your_second_bybit_api_key_here
BYBIT_API_SECRET_2=your_second_bybit_api_secret_here

# Enhanced TP/SL System (OPTIONAL)
ENABLE_ENHANCED_TP_SL=true  # Use enhanced TP/SL system with direct orders (default: true)
CANCEL_LIMITS_ON_TP1=true   # Cancel unfilled limit orders when TP1 (85%) hits (default: true)

# Enhanced Breakeven and Safety Settings (OPTIONAL)
DYNAMIC_FEE_CALCULATION=true        # Use dynamic fee rates instead of fixed 0.06% (default: true)
BREAKEVEN_SAFETY_MARGIN=0.0001      # Additional safety margin beyond fees - 0.01% (default: 0.0001)
ENHANCED_FILL_DETECTION=true        # Enhanced real-time fill detection with order history verification (default: true)
ADAPTIVE_MONITORING_INTERVALS=true  # Use adaptive monitoring speeds (2s critical, 5s active, 12s standard) (default: true)

# Enhanced Breakeven Failsafe System
BREAKEVEN_FAILSAFE_ENABLED=true     # Enable comprehensive breakeven failsafe system (default: true)
BREAKEVEN_MAX_RETRIES=5             # Maximum breakeven retry attempts (default: 5)
BREAKEVEN_EMERGENCY_SL_OFFSET=0.002 # Emergency SL offset percentage - 0.2% (default: 0.002)
BREAKEVEN_VERIFICATION_INTERVAL=30  # SL verification interval in seconds (default: 30)
BREAKEVEN_PREFER_AMEND=true         # Prefer amend over cancel/replace for safer operations (default: true)
BREAKEVEN_ENABLE_PROGRESSIVE_RETRY=true  # Enable progressive retry with different prices (default: true)
BREAKEVEN_ENABLE_EMERGENCY_MODE=true     # Enable emergency protection mode (default: true)
BREAKEVEN_ALERT_FAILURES=true      # Send alerts on breakeven failures (default: true)


# Enhanced Market Analysis System (OPTIONAL)
ENABLE_ENHANCED_MARKET_ANALYSIS=true     # Enable real-time market analysis with technical indicators (default: true)
MARKET_DATA_CACHE_TTL=300                # Market data cache TTL in seconds (default: 300 - 5 minutes)
MARKET_ANALYSIS_TIMEOUT=30               # Market analysis timeout in seconds (default: 30)
ENABLE_SOCIAL_SENTIMENT_INTEGRATION=false  # Integrate social media sentiment into analysis (default: false)
MARKET_ANALYSIS_MIN_CONFIDENCE=60.0      # Minimum confidence threshold for analysis (default: 60.0%)
MARKET_DATA_MIN_QUALITY=70.0             # Minimum data quality threshold (default: 70.0%)
REGIME_DETECTION_ENABLED=true            # Enable market regime detection (default: true)
VOLATILITY_ANALYSIS_ENABLED=true         # Enable volatility analysis (default: true) 
MOMENTUM_ANALYSIS_ENABLED=true           # Enable momentum analysis (default: true)
PRIMARY_MARKET_SYMBOLS=BTCUSDT,ETHUSDT,BNBUSDT,ADAUSDT,SOLUSDT  # Primary symbols for market overview (default: top 5)